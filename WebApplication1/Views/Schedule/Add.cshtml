@model WebApplication1.Models.Schedules.DetailsScheduleViewModel
@{
	ViewData["Title"] = "Добавяне на програма";
	string chosenCategory = "";
	foreach (var item in ViewBag.ChosenCategory)
	{
		chosenCategory = item.Name;
	}
}
<form asp-action="Add" typeof="post">

	<h2>Сигурни ли сте, че искате да добавите тази програма?</h2>
	<h5>Заглавие: @Model.Title</h5>
	<h5>Резюме: @Model.Summary</h5>
	<h5>Съдържание: @Model.Content</h5>
	<h5>Категория: @chosenCategory</h5>
	<img src="data:image;base64,@(Convert.ToBase64String(Model.Image))" style="border-radius:1rem;max-width:250px;max-height:250px" />
	<br />
	<button type="submit" asp-route-id="@Model.Id" class="btn btn-success" type="post">Да</button>
	<a asp-action="Index" class="btn btn-danger">Не</a>
</form>
<style>
	form {
		margin: 3% 10% 0 10%;
	}
</style>
