@model WebApplication1.Models.Schedules.EditScheduleViewModel
<main>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Title" class=""></label>
            <input asp-for="Title" class="form-control" value="@Model.Schedule.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Summary" class=""></label>
            <input asp-for="Summary" class="form-control" value="@Model.Schedule.Summary" />
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content" class=""></label>
            <input asp-for="Content" class="form-control" value="@Model.Schedule.Content" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class=""></label>
            <input asp-for="ImageUrl" class="form-control" value="@Model.Schedule.ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Запази</button>
    </form>
</main>

<style>
    main {
        margin: 3% 5% 0 5%;
    }
</style>
