@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" asp-controller="Schedule" asp-action="PersonalSchedules">Потребителски програми</a>
    </li>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-success" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-danger" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
