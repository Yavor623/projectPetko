@model WebApplication1.Models.Resources.EditResourceViewModel
<main>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Title" class=""></label>
            <input asp-for="Title" class="form-control" value="@Model.Resource.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class=""></label>
            <input asp-for="Description" class="form-control" value="@Model.Resource.Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Link" class=""></label>
            <input asp-for="Link" class="form-control" value="@Model.Resource.Link" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class=""></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories" value="@Model.Resource.Category.Name" />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Запази</button>
    </form>
</main>

<style>
    main {
        margin: 3% 5% 0 5%;
    }
</style>
